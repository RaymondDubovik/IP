<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
    <servlet>
        <servlet-name>SystemServiceServlet</servlet-name>
        <servlet-class>com.google.api.server.spi.SystemServiceServlet</servlet-class>
        <init-param>
            <param-name>services</param-name>
            <param-value>
                com.fergus.esa.backend.ESAEventEndpoint
            </param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>SystemServiceServlet</servlet-name>
        <url-pattern>/_ah/spi/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ESA Tweet</servlet-name>
        <servlet-class>com.fergus.esa.backend.ESATweetServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ESA Tweet</servlet-name>
        <url-pattern>/esa_tweet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ESA News</servlet-name>
        <servlet-class>com.fergus.esa.backend.ESANewsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ESA News</servlet-name>
        <url-pattern>/esa_news</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ESA Event</servlet-name>
        <servlet-class>com.fergus.esa.backend.ESAEventServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ESA Event</servlet-name>
        <url-pattern>/esa_event</url-pattern>
    </servlet-mapping>
    <servlet>
        <display-name>Remote API Servlet</display-name>
        <servlet-name>RemoteApiServlet</servlet-name>
        <servlet-class>com.google.apphosting.utils.remoteapi.RemoteApiServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoteApiServlet</servlet-name>
        <url-pattern>/remote_api</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>ObjectifyFilter</filter-name>
        <filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ObjectifyFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>